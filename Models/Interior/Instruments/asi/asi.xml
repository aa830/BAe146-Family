<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>asi.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>rouek100</object-name>
    <object-name>rouek10</object-name>
    <object-name>rouek1</object-name>
    <object-name>rouem1</object-name>
    <object-name>rouem01</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>rouek100</object-name>
    <object-name>rouek10</object-name>
    <object-name>rouek1</object-name>
    <object-name>rouem1</object-name>
    <object-name>rouem01</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>  -9 </dep></entry>
      <entry><ind>  60 </ind><dep>   0 </dep></entry>
      <entry><ind> 100 </ind><dep>  61 </dep></entry>
      <entry><ind> 120 </ind><dep>  91 </dep></entry>
      <entry><ind> 140 </ind><dep> 120 </dep></entry>
      <entry><ind> 160 </ind><dep> 149 </dep></entry>
      <entry><ind> 180 </ind><dep> 166 </dep></entry>
      <entry><ind> 200 </ind><dep> 183 </dep></entry>
      <entry><ind> 250 </ind><dep> 229 </dep></entry>
      <entry><ind> 300 </ind><dep> 256 </dep></entry>
      <entry><ind> 350 </ind><dep> 283 </dep></entry>
      <entry><ind> 400 </ind><dep> 309 </dep></entry>
      <entry><ind> 450 </ind><dep> 335 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Speed indicator -->
  <animation>
    <type>rotate</type>
    <object-name>rouek1</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <factor>36</factor>
    <center>
      <x-m> -0.016 </x-m>
      <y-m>  0.010 </y-m>
      <z-m> -0.017 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rouek10</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <factor>3.6</factor>
    <center>
      <x-m> -0.016 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.017 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rouek100</object-name>
    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <factor>0.36</factor>
    <step>100</step>
    <center>
      <x-m> -0.016 </x-m>
      <y-m> -0.009 </y-m>
      <z-m> -0.017 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Mach indicator -->
  <animation>
    <type>rotate</type>
    <object-name>rouem01</object-name>
    <property>/velocities/mach</property>
    <factor>3600</factor>
    <center>
      <x-m> -0.016 </x-m>
      <y-m>  0.005 </y-m>
      <z-m>  0.017 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rouem1</object-name>
    <property>/velocities/mach</property>
    <factor>360</factor>
    <center>
      <x-m> -0.016 </x-m>
      <y-m> -0.005 </y-m>
      <z-m>  0.017 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

